<UserControl x:Class="MainApplication.View.SingleMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainApplication.View"
             mc:Ignorable="d"
             d:DesignHeight="240" d:DesignWidth="320">
    <UserControl.Resources>
        <local:BedNoConverter x:Key="BedNoFormat"/>
    </UserControl.Resources>
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="LightGreen"/>
        <TextBlock Text="{Binding BedNo, Converter={StaticResource BedNoFormat}}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding PatientName}" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
